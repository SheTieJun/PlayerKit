<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >



    <com.shetj.sdk.video.viedoview.ui.BasePlayerView
        android:id="@+id/superVodPlayerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/teal_700"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btn_floatView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/superVodPlayerView"
        app:layout_constraintStart_toStartOf="parent"
        android:text="悬浮播放"/>

    <Button
        android:id="@+id/btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_floatView"
        app:layout_constraintStart_toStartOf="parent"
        android:text="设置TV"/>


    <Button
        android:id="@+id/btn_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:text="设置多个url"/>

    <Button
        android:id="@+id/btn_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_url"
        app:layout_constraintStart_toStartOf="parent"
        android:text="设置播放列表key"/>

    <Button
        android:id="@+id/btn_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_key"
        app:layout_constraintStart_toStartOf="parent"
        android:text="设置隐藏控制"/>


    <Button
        android:id="@+id/btn_show_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_hide"
        app:layout_constraintStart_toStartOf="parent"
        android:text="倍数设置"/>


    <Button
        android:id="@+id/btn_test_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_show_speed"
        app:layout_constraintStart_toStartOf="parent"
        android:text="go"/>


    <Button
        android:id="@+id/btn_test_hide_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_test_go"
        app:layout_constraintStart_toStartOf="parent"
        android:text="隐藏全屏"/>
</androidx.constraintlayout.widget.ConstraintLayout>